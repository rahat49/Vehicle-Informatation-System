@model IEnumerable<VIMS.DataModel.User>
@{
    ViewData["Title"] = "Citizen Profile";
    Layout = "_Layout";
}
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="https://cdn-icons-png.flaticon.com/512/706/706807.png"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />

                            @foreach (var item in Model)
                            {

                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <p>Citizen</p>
                              
                                <a  asp-action="CitizenEdit" asp-route-id="@item.Uid"><i class="far fa-edit mb-5"></i></a>
                            }

                        </div>
                                
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Personal Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    @foreach (var item in Model)
                                    {

                                        <div class="col-7 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Email)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Phone)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Address</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Address)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>NID</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.NID)</p>

                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Vehicle Number</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Vehnum)</p>
                                        </div>

                                    }

                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>