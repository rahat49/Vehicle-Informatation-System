@model IEnumerable<VIMS.DataModel.RulesViolationForm>

@{
    ViewData["Title"] = "Accident Report";
    Layout = "_Layout";
}
<header class="text-dark" style="margin-top:90px;">
    <div class="container px-4 text-center">
        <h1>Violation Report</h1>

    </div>
</header>
@if (Model.Count() == 0)
    {
        <div class="d-flex justify-content-center">
            <h3 class="alert alert-success text-dark ">You Don't Have Any Rules Violation Record</h3>
        </div>
    

    }
    else
    {
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Traffic Police Name</th>
                <th scope="col">Rules Type</th>
                <th scope="col">Vehicle Category</th>
                <th scope="col">Vehicle Number</th>
                <th scope="col">Vehicle Owner Name</th>
                <th scope="col">Fees</th>
                <th scope="col">Location</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TPoliceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RulesType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehCategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehnum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehOwnerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fees)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
                }
        </tbody>
    </table>
    }


