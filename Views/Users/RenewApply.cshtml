    <meta charset="UTF-8">
    <!-------------Form CDN--------------->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/css/bootstrap.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/12.1.2/css/intlTelInput.css'>
    <link rel='stylesheet' href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css'>
    <link rel="stylesheet" href="~/css/renewstyle.css">
    <!----------------------------->
    <!----MDB-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css">

    <title>@ViewData["Title"] - VIMS</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />

    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

</head>
<body>
    <style>
        body {
            background-image: url(/images/bg2.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .multi_step_form {
            margin-top: 80px;
        }
    </style>
    <header>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#37517e;" id="mainNav">
            <div class="container px-4">
                <a class="navbar-brand" asp-action="Home" asp-controller="Users">VIMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-action="Home" asp-controller="Users">Home</a></li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Report
                            </a>
                            <ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li><a asp-action="AccidentReport" asp-controller="Users" class="dropdown-item">Accidet Report</a></li>

                                <li><a asp-action="ViolationReport" asp-controller="Users" class="dropdown-item">Rules Violation Report</a></li>

                                <li><a href="http://www.brta.gov.bd/site/view/legislative_information" class="dropdown-item">Act & Rules</a></li>

                            </ul>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Fitness
                            </a>
                            <ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li><a asp-action="RenewApply" asp-controller="Users" class="dropdown-item">Renew Apply</a></li>
                                <li><a asp-action="RenewStatus" asp-controller="Users" class="dropdown-item">Renew Status</a></li>
                            </ul>
                        <li class="nav-item"><a asp-action="Service" asp-controller="Users" class="nav-link">Service</a></li>

                        <li class="nav-item"><a asp-action="UserProfile" asp-controller="Users" class="nav-link">Profile</a></li>

                        <li class="nav-item"><a asp-action="LogOut" asp-controller="Users" class="nav-link">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Multi step form -->
    <section class="multi_step_form">
        <form id="msform" asp-action="RenewApply" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Tittle -->
            <div class="tittle">
                <h2>Fitness Renew Application</h2>
                <p>In order to apply for fitness renew application, you have to complete this full process</p>
            </div>
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active">Personal Information</li>
                <li>Vehicle Information</li>
                <li>Payment</li>
            </ul>
            <!-- fieldsets -->
            <fieldset>
                <h3>Fill Up Vehicle Owner Information</h3>
                <h6>We will check your information from BRTA server.</h6>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input asp-for="OwnerName" type="text" class="form-control" placeholder="Vehicle Owner Name" required>
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12" style="margin-top: 10px;">
                        <input asp-for="OwnerAddress" type="text" class="form-control" placeholder="Vehicle Owner Address"  required>
                        <span asp-validation-for="OwnerAddress" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12" style="margin-top: 10px;">
                        <input asp-for="Phone" type="tel" id="phone" class="form-control" placeholder="+880"  required>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12" style="margin-top: 10px;">
                        <input asp-for="Status" type="hidden" Value="Pending" class="form-control">
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <button type="button" class="next action-button">Continue</button>
            </fieldset>
            <fieldset class="content">
                <h3>Vehicle Information</h3>
                <h6>Please provide your vehicle information.</h6>
                <div class="row passport">
                    <div class="col-sm-6">
                        <input asp-for="Vehnum" type="text" class="form-control" placeholder="Vehicle Number" required>
                        <span asp-validation-for="Vehnum" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <select asp-for="Vcategory" class="wide nice-select  form-select" aria-label="Default select example">
                            <option selected>Select Vehicle Category</option>
                            <option value="Bike">Bike</option>
                            <option value="Car">Car</option>
                            <option value="Jeep">Jeep</option>
                            <option value="Bus">Bus</option>
                            <option value="Truck">Truck</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>

                    <div class="col-sm-6 " style="margin-top: 10px;">
                        
                        <input asp-for="Brandname" type="text" class="form-control " placeholder="Brand Name" required>
                        <span asp-validation-for="Brandname" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6" style="margin-top: 10px;">

                        <input asp-for="MadeYear" type="text" class="form-control" placeholder="Made In Year" required>
                        <span asp-validation-for="MadeYear" class="text-danger"></span>
                    </div>
                    <div class="col-6" style="margin-top: 10px;">
                        <select asp-for="Color" class="wide nice-select  form-select" aria-label="Default select example">
                            <option selected>Select Your Vehicle Color</option>
                            <option value="White">White</option>
                            <option value="Gray">Gray</option>
                            <option value="Black">Black</option>
                            <option value="Silver">Silver</option>
                            <option value="Red">Red</option>
                            <option value="Blue">Blue</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div class="col-sm-6" style="margin-top: 10px;">
                        <input asp-for="ChassisNo" type="number" class="form-control" placeholder="Chassis No." required>
                        <span asp-validation-for="ChassisNo" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6" style="margin-top: 10px;">

                        <input asp-for="EngineNo" type="number" class="form-control" placeholder="Engine No." required>
                        <span asp-validation-for="EngineNo" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6" style="margin-top: 10px;">
                        @*<input type="text" id="datepicker"></p>*@
                        <input asp-for="Registrationdate" type="text" id="datepicker" class="form-control" placeholder="Vehicle Registration Date" required>
                        <span asp-validation-for="Registrationdate" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6" style="margin-top: 10px;">
                        <input asp-for="TaxTNumber" type="number" class="form-control" placeholder="Tax Token Number" required>
                        <span asp-validation-for="TaxTNumber" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6" style="margin-top: 10px;">
                        <input asp-for="TTExpirydate" type="text" id="datepicker2" class="form-control" placeholder="Tax Token Expiry Date"  required>
                        <span asp-validation-for="TTExpirydate" class="text-danger"></span>
                    </div>
                </div>
                <button type="button" class="next action-button">Continue</button>
            </fieldset>
            <fieldset>
                <h3>Payment Information</h3>
                <h6>Please provide your payment information.</h6>
                <div class="row form-group">
                    <div class=" col-md-12">
                        <input asp-for="CardOwnerName" type="text" class="form-control" placeholder="Card Owner Name" required>
                        <span asp-validation-for="CardOwnerName" class="text-danger"></span>
                    </div>
                    <div class="col-md-12" style="margin-top: 10px;">
                        <input asp-for="CardNumber" type="text" class="form-control" placeholder="Valid Card Number" required>
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6" style="margin-top: 10px;">
                        <input asp-for="ExpiryDate" type="text" id="datepicker3" class="form-control" placeholder="Expiration Date" required>
         
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6" style="margin-top: 10px;">
                        <input asp-for="CVV" type="number" class="form-control" placeholder="CVV" required>
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>

                    <div class="col-md-12" style="margin-top: 10px;">
                        <input asp-for="Fees" type="hidden" class="form-control" value="499">
                    </div>
                    <div>
                        <h6 class="bill-date mt-4">Total Application Fees 499/- Taka <small>Fees includes all taxes.</small></h6>
                    </div>
                </div>
                <button type="submit" asp-action="RenewApply" asp-controller="Users" class="action-button">Confirm</button>

            </fieldset>

        </form>
    </section>
  
    <!-- End Multi step form -->
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>


    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/js/bootstrap.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/12.1.2/js/intlTelInput.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js'></script>
    <script src="~/js/renewscript.js"></script>

    @section scripts{ }

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
    <link type="text/css" rel="Stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/start/jquery-ui.css" />
    <script type="text/javascript">
        $(function () {
    $("#datepicker").datepicker({ maxDate: "now" });

    $("#datepicker2").datepicker({ minDate: "now" });

    $("#datepicker3").datepicker({ minDate: "now" });
        });</script>




</body>
</html>