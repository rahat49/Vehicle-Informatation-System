@model IEnumerable<VIMS.DataModel.Vehicle>

@{
    ViewData["Title"] = "Vehicle List";
    Layout = "_AdminLayout";
}

<style>

    .tgroup, h1,p {
        margin: 20px;
    }

    
</style>
<div>
    <h1 class="mt-4">Vehicle List</h1>
    <p>
        <a class="btn btn-primary btn-sm" asp-action="Vehicle">Add New</a>
    </p>

    <div class="tgroup">
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                    <th>
                      #SL
                    </th>
                    <th>
                      Vehicle Number
                    </th>
                    <th>
                        Action
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehnum)
                        </td>

                        <td>
                         
                            <a class="btn btn-danger btn-sm" asp-action="CitizenDelete" asp-route-id="@item.vid"><i class='far fa-trash-alt' style='font-size:15px'></i></a>
                        </td>


                    </tr>
                        i++;
                    }
            </tbody>
        </table>
    </div>
</div>

