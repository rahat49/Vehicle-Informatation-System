@model IEnumerable<VIMS.DataModel.Renewapply>
@{
    ViewData["Title"] = "Renew Apply Request";
    Layout = "_AdminLayout";
}
<style>
    .h1 {
        margin:0px;
    }
    .tgroup {
       
       
    }
</style>
<div class="container">
    <h1>Renew Application Request</h1>
    <div class="tgroup">
        <table class="table table-striped table-dark text-center">

            <thead>
                <tr>

                    <th>Owner Name</th>
                    <th>Phone Number</th>
                    <th>Vehicle Category</th>
                    <th>Vehicle Number</th>
                    <th>Status</th>
                    <th>Detail</th>
                    <th>Action</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vcategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehnum)
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-warning text-dark">   @Html.DisplayFor(modelItem => item.Status)</span>

                       </td>
                        <td>
                            <a class="text-decoration-none btn btn-info btn-sm" asp-action="RenewAppDetail" asp-route-id="@item.id">View</a>

                        </td>

                        <td>
                            <a class="btn btn-success btn-sm" asp-action="Accept" asp-route-id="@item.id"><i class="fa-solid fa-check" style='font-size:15px'></i></a>
                         
                            |
                            <a class="btn btn-danger btn-sm" asp-action="Reject" asp-route-id="@item.id"><i class="fas fa-ban" style='font-size:15px'></i></a> 
                            
                        </td>

                    </tr>
                }
            </tbody>
        </table>
</div>
</div>