@model IEnumerable<VIMS.DataModel.User>

@{
    ViewData["Title"] = "Citizen Report";
    Layout = "_ReportLayout";
}
<style>

    .tgroup, h1,p{
        margin: 30px;
    }
</style>

    <div>
        <div class="text-center pt-5">
            <h3 style="text-decoration: underline rgb(146, 146, 146);">Citizen Report</h3>


        </div>
        <div class="tgroup">
            <table class="table table-bordered border-primary text-center">
               
                <thead>
                    <tr>
                        <th>
                            #SL
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Vehnum)
                        </th>


                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vehnum)
                            </td>

                        </tr>
                            i++; 
                        }
                </tbody>
            </table>
        </div>
    </div>
