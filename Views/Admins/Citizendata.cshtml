@model IEnumerable<VIMS.DataModel.User>

@{
    ViewData["Title"] = "Citizen Data List";
    Layout = "_AdminLayout";
}
<style>

    .tgroup,h1 {
        
        margin:20px;
    }
</style>
<div>
    <h1 class="mt-4">Citizen List</h1>

    <div class="tgroup">
        <table class="table table-striped table-dark text-center">
          
            <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Email
            </th>
            <th>
                Phone
            </th>
           
            <th>
                Vehicle Number
            </th>
          
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Vehnum)
            </td>
       
            <td>
                 <a class ="btn btn-info btn-sm" asp-action="CitizenDetails" asp-route-id="@item.Uid"><i class="fas fa-eye" style='font-size:15px'></i></a> |
                 <a class="btn btn-danger btn-sm" asp-action="CitizenDelete" asp-route-id="@item.Uid"><i class='far fa-trash-alt' style='font-size:15px'></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
  </div>
</div>
