@model IEnumerable<VIMS.DataModel.Service>

@{
    ViewData["Title"] = "Service";
    Layout = "_AdminLayout";
}
<style>

    .tgroup, h1, p {
        margin: 20px;
    }
</style>
<div>
    <h1 class="mt-4">Service</h1>
    <p>
        <a class="btn btn-primary" asp-action="ServiceCreate">Add Service</a>
    </p>


    <div class="tgroup">
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                    <th>
                        SL
                    </th>

                    <th>
                        Company Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Action
                    </th>


                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                      
                        <td>
                            @*<a class="btn btn-primary btn-sm" asp-action="ServiceEdit" asp-route-id="@item.sid"><i class='far fa-edit' style='font-size:15px'></i></a> |*@
                         
                            <a class="btn btn-danger btn-sm" asp-action="ServiceDelete" asp-route-id="@item.sid"><i class='far fa-trash-alt' style='font-size:15px'></i></a>
                        </td>


                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>