@model IEnumerable<VIMS.DataModel.TrafficPolice>

@{
    ViewData["Title"] = "Traffic Police List";
    Layout = "_AdminLayout";
}

<style>

    .tgroup, h1,p{
        margin: 20px;
    }
    
</style>
<div>
    <h1 class="mt-4">Traffic Police List</h1>
    <p>
        <a class="btn btn-primary" asp-action="TpoliceCreate">Create New</a>
    </p>
  
    <div class="tgroup">
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Policeid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Designation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Range)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Policeid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Range)
                        </td>

                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="TpoliceEdit" asp-route-id="@item.Tid"><i class='far fa-edit' style='font-size:15px'></i></a> |
                            <a class="btn btn-info btn-sm" asp-action="TpoliceDetails" asp-route-id="@item.Tid"><i class="fas fa-eye" style='font-size:15px'></i></a> |
                            <a class="btn btn-danger btn-sm" asp-action="TpoliceDelete" asp-route-id="@item.Tid"><i class='far fa-trash-alt' style='font-size:15px'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>