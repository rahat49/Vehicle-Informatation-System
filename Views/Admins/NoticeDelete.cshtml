@model VIMS.DataModel.Notice

@{
    ViewData["Title"] = "Notice Delete";
    Layout = "_AdminLayout";
}
<style>
    #link {
        margin-top: 10px;
    }
    .container{
        margin:10px;
    }
</style>
<div class="container">


    <h1>Delete</h1>

    <h3>Are you sure you want to delete this notice?</h3>
    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Heading)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Heading)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Detail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Detail)
            </dd>
            
            <dt class="col-sm-2">
                Action
            </dt>
            <dd class="col-sm-10">
                <form asp-action="NoticeDelete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
                </form>
             </dd>
        
        </dl>

        
           
            <a class="text-decoration-none" asp-action="NoticeView">Back to List</a> |
            <a asp-action="AdminDashboard"> <i class='fa fa-home' style="font-size:20px;color:black"></i></a>
      
    </div>
</div>