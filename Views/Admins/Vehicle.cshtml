@model VIMS.DataModel.Vehicle

@{
    ViewData["Title"] = "Add vehicle";
    Layout = "_AdminLayout";
}
<div>
    @Html.ValidationSummary(true)
    <div class="container-fluid px-4">
        <h1 class="mt-4">Add Vehicle</h1>
        <form asp-action="AddVehicle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3 align-items-center">


                <div class="col-md-4">
                    <label asp-for="Vehnum" class="form-label">Vehicle Number</label>
                    <input asp-for="Vehnum" type="text" class="form-control" aria-describedby="emailHelp" required>
                    <span asp-validation-for="Vehnum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button style="margin-top:20px;" type="submit" class="btn btn-outline-primary btn-md">Add</button>

            </div>
        </form>
        <div id="link" class="mt-3">
            <a class="text-decoration-none" asp-action="Vehiclelist" asp-controller="Admins">View Vehicle List</a>
            | <a asp-action="AdminDashboard"> <i class='fa fa-home' style="font-size:20px;color:black"></i></a>
        </div>
    </div>
</div>