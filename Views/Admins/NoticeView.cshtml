@model IEnumerable<VIMS.DataModel.Notice>

@{
    ViewData["Title"] = "Notice";
    Layout = "_AdminLayout";
}



<style>

    .tgroup, h1, p{
        margin: 20px;
    }
</style>
<div>
    <h1 class="mt-4">View Notice</h1>
    <p>
        <a class="btn btn-primary" asp-action="Notice">Add Notice</a>
    </p>


    <div class="tgroup">
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                    <th>
                        SL
                    </th>

                    <th>
                        Heading
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Action
                    </th>


                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Heading)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="NoticeEdit" asp-route-id="@item.Id"><i class='far fa-edit' style='font-size:15px'></i></a> |
                            <a class="btn btn-info btn-sm" asp-action="NoticeDetails" asp-route-id="@item.Id"><i class="fas fa-eye" style='font-size:15px'></i></a> |
                            <a class="btn btn-danger btn-sm" asp-action="NoticeDelete" asp-route-id="@item.Id"><i class='far fa-trash-alt' style='font-size:15px'></i></a>
                        </td>


                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>