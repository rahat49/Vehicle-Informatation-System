@{
    ViewData["Title"] = "Vehicle Information Management System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Vehilce Information Management System</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#37517e;" id="mainNav">
        <div class="container px-4">
            <a class="navbar-brand" href="#page-top">VIMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#page-top">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Citizen Portal
                        </a>
                        <ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
                            <li><a asp-action="SignUp" asp-controller="Users" class="dropdown-item">Sign Up</a></li>

                            <li><a asp-action="Login" asp-controller="Users" class="dropdown-item">Log In</a></li>

                            <li><a href="http://www.brta.gov.bd/site/view/legislative_information" class="dropdown-item">Act & Rules</a></li>

                        </ul>
                    <li class="nav-item"><a asp-action="Login" asp-controller="TrafficPolice" class="nav-link">Traffic Portal</a></li>
                    <li class="nav-item"><a asp-action="Login" asp-controller="Admins" class="nav-link">BRTA</a></li>
                    <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="text-white" style=" background-image: url(/images/bg.jpg); background-size: cover;  background-repeat: no-repeat;">
        <div class="container px-4 text-center">
            <h1 class="fw-bolder">Vehilcle Information Management System</h1>
            <h2>Bangladesh Road Transport Authority </h2>
            <p class="lead">Government of the People's Republic of Bangladesh </p>
            <a class="btn btn-md btn-primary" asp-action="Notice" asp-controller="Master">Notice</a>
        </div>
    </header>
    <!-- About section-->
    <section id="about">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-8">
                    <h2>About</h2>
                    <p class="lead">Vehicle Information Management Service (VIMS), Government of the People's Republic of Bangladesh is promoting to citizen a Information Technology to find their vehicle record. </p>
                    <h5>For Citizen</h5>
                    <ul>

                        <li>Apply for Fitness Renew</li>
                        <li>History of rules violation</li>
                        <li>History of accident</li>

                    </ul>
                    <h5>For Traffic Police</h5>
                    <ul>

                        <li>Rules violation case</li>
                        <li>Accident information </li>
                        <li>History of rules violation</li>
                        <li>History of accident</li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Services section-->
    <section class="bg-light" id="services">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-8">
                    <h2>Services we offer</h2>
                    <p class="lead">VIMS Service Portal (VSP) is an online medium for Information services. Through which anyone can apply their application for vehicle fitness renew.
                    And also can see the report of your vehicle rules violation and accident as well as
                    where to you can renew your vehicle insurance government authorize organization. </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact section-->
    <section id="contact">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-8">
                    <h2>Contact us</h2>
                    <p class="lead">
                        Bangladesh Road Transport Authority(BRTA)
                        Head Office, BRTA Bhaban
                        Chairmanbari, New Airport Road
                        Banani, Dhaka-1212,
                        Bangladesh.
                    </p>
                    <p> Email: info@vims.gov.bd</p>
                    <p>
                        If you need any kind of help Citizen Service Related information is available at <a class="text-decoration-none" href="http://brta.gov.bd">BRTA</a>
                         now.
                    </p>

                </div>
            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-4" style="background-color:#37517e;">
        <div class="container px-4">
            <p class="m-0 text-white">Copyright &copy; Vehicle Information System 2022</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
</body>
</html>
