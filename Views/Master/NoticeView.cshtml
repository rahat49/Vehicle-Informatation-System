@model VIMS.DataModel.Notice
@{

    Layout = null;
}
@{
    ViewData["Title"] = "Notice Board";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - VIMS</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body id="page-top">
    <style>

        .tgroup, h1 {
            margin: 30px;
        }

        #foot {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#37517e;" id="mainNav">
        <div class="container px-4">
            <a class="navbar-brand" asp-action="Index" asp-controller="Master">VIMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Master">Home</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Citizen Portal
                        </a>
                        <ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
                            <li><a asp-action="SignUp" asp-controller="Users" class="dropdown-item">Sign Up</a></li>

                            <li><a asp-action="Login" asp-controller="Users" class="dropdown-item">Log In</a></li>

                            <li><a href="http://www.brta.gov.bd/site/view/legislative_information" class="dropdown-item">Act & Rules</a></li>

                        </ul>
                    <li class="nav-item"><a asp-action="Login" asp-controller="TrafficPolice" class="nav-link">Traffic Portal</a></li>
                    <li class="nav-item"><a asp-action="Login" asp-controller="Admins" class="nav-link">BRTA</a></li>
                    <li class="nav-item"><a asp-action="Notice" asp-controller="Master" class="nav-link">Notice</a></li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="text-white" style=" background-image: url(/images/bg.jpg); background-size: cover;  background-repeat: no-repeat;">
        <div class="container px-4 text-center">
            <h1 class="fw-bolder">Vehilcle Information Management System</h1>
            <h2>Bangladesh Road Transport Authority </h2>
            <p class="lead">Government of the People's Republic of Bangladesh </p>
        </div>
    </header>
   

    <div class="container">
      
                <h4 class="mt-4">Notice Detail</h4>
                <hr />
                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Heading)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Heading)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                       Detail
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Detail)
                    </dd>
                </dl>
            </div>
        

</body>
