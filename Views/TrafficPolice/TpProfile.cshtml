@model IEnumerable<VIMS.DataModel.TrafficPolice>
@{
    ViewData["Title"] = "Traffic Police Profile";
    Layout = "_TrafficPoliceLayout";
}
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>
<section class="mt-5">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="https://cdn-icons-png.flaticon.com/512/190/190628.png?w=826&t=st=1671531539~exp=1671532139~hmac=f47e0a2a77077cbb8bdb76ab0f0d8fd807900ef121a80227221df85eb527da45"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />

                            @foreach (var item in Model)
                            {

                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <p>Traffic Police</p>

                                <a asp-action="TpProfileEdit" asp-route-id="@item.Tid"><i class="far fa-edit mb-5"></i></a>
                            }

                        </div>

                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Personal Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    @foreach (var item in Model)
                                    {

                                        <div class="col-7 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Email)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Phone)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Pholice ID</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Policeid)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Designation</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Designation)</p>

                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Range</h6>
                                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Range)</p>
                                        </div>

                                    }

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>