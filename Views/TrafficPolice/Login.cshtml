@model VIMS.DataModel.Admin;
@{
    ViewData["Title"] = "Traffic Police Login";

    Layout = "_LoginLayout";

}

<style>
    .gradient-custom {
        background-image: url(/images/bg.jpg);
        background-size: cover;
        background-repeat: no-repeat;
    }

    #foot {
        position: absolute;
        bottom: 0;
        width: 100%;
    }
</style>
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#37517e;" id="mainNav">
    <div class="container px-4">
        <a class="navbar-brand" href="#page-top">VIMS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Master">Home</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Citizen Portal
                    </a>
                    <ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
                        <li><a asp-action="SignUp" asp-controller="Users" class="dropdown-item">Sign Up</a></li>

                        <li><a asp-action="Login" asp-controller="Users" class="dropdown-item">Log In</a></li>

                        <li><a href="http://www.brta.gov.bd/site/view/legislative_information" class="dropdown-item">Act & Rules</a></li>

                    </ul>
                <li class="nav-item"><a asp-action="Login" asp-controller="TrafficPolice" class="nav-link">Traffic Portal</a></li>
                <li class="nav-item"><a asp-action="Login" asp-controller="Admins" class="nav-link">BRTA</a></li>
                <li class="nav-item"><a asp-action="Notice" asp-controller="Master" class="nav-link">Notice</a></li>
            </ul>
        </div>
    </div>
</nav>
<section class="vh-100 gradient-custom" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Traffic Police Login</p>
                                <form asp-action="Login" class="mx-1 mx-md-4">
                                    <div class="form-floating mb-3">

                                        <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" required />
                                        <label for="floatingInput">Email address</label>
                                    </div>
                                    <div class="form-floating">
                                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required />
                                        <label for="floatingPassword">Password</label>
                                    </div>

                                    <div class="col-12 mt-3">
                                        <button type="submit" asp-action="Login" asp-controller="TrafficPolice" class="btn btn-primary btn-md">Login</button>

                                    </div>
                                </form>
                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://st2.depositphotos.com/2704315/10972/v/600/depositphotos_109721756-stock-illustration-traffic-policeman-vector-flat-cartoon.jpg" style="margin-left:80px;width:450px;height:300px;" class="img-fluid rounded" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer-->
<footer class="py-4" id="foot" style="background-color:#37517e;">
    <div class="container px-4">
        <p class="m-0 text-white">Copyright &copy; Vehicle Information System 2022</p>
    </div>
</footer>